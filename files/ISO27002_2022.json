            ],
            "parts": [
              {
                "name": "description",
                "prose": "Define, document and enforce rules for the acceptable use of information and related assets."
              },
              {
                "name": "guidance",
                "prose": "Ensure all personnel and external users acknowledge and adhere to usage rules; tailor rules to risk and role."
              }
            ]
          },
